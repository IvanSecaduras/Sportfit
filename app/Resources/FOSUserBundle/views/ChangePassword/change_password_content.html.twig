{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
  <div class="portlet light bordered card-4">
    <div class="portlet-title">
      <div class="caption">
        <i class="icon-bar-chart font-dark hide"></i>
        <span class="caption-subject font-dark bold uppercase"><i class="fa fa-unlock-alt"></i> Cambiar contrase√±a</span>
      </div>
    </div>
    <div class="portlet-body">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
      <div class="row padding-tb-20">
          {{ form_widget(form) }}
      </div>
      <div class="row form-group">
        <div class="col-xs-12">
          <input type="submit" class="btn btn-info pull-right" value="{{ 'change_password.submit'|trans }}" />
          <a id="cancelar" onclick="window.history.go(-1); return false;" class="btn btn-danger pull-right" style="margin:auto 20px;">Cancelar</a>
        </div>
      </div>
        {{ form_end(form) }}
    </div>
    <!-- END PORTLET-->
  </div>
</div>

